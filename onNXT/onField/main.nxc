#include "config.nxc"
#include "display.nxc"
#include "sensor.nxc"
#include "motor.nxc"
#include "physic.nxc"

#include "NXCDefs.h"
#include "BTlib.nxc"

#include "color.nxc"
#include "follow.nxc"
#include "rotate.nxc"
#include "onTouch.nxc"
#include "move.nxc"
#include "bluetooth.nxc"

task main()
{
bluetooth_init();
sensor_init();
display_start();

while(true)
{
onTouch();
if(!color_field()){
follow_line();
}else{
motor_stop();
bluetooth_run();
}

}
motor_stop();
}
